doctype html
html(lang='en')
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    title #{title ? title : 'Separdaz - Cryptocurrency Exchange'}
    
    meta(name='description', content='Separdaz is a cryptocurrency exchange where you can trade a wide range of coins fast and securely.')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    != css('main')

    include _config

  body.auth
    header.page-head
      .wrapper
        a(href="/", title="Return to homepage").site-logo
          img(src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==", alt="Separdaz").separdaz-logo
        nav.site-nav
          ul.nav
            - if (user)
              li: a(href='/funds', class=(page === 'funds' ? 'active' : '')) سرمایه
              li.dropdown
                a(href="/settings", class=(page === 'settings' ? 'active' : '')).dropdown-toggle
                  | #{user.email}
                  .caret
                ul.dropdown-menu
                  li: a(href="/settings") تنظیمات
                  li: a(href="http://support.separdaz.com") پشتیبانی
                  li: a(href='/logout') خروج
            - else
              nav.auth-nav
                ul.nav
                  li: a(href='/login').btn.white ورود
                  li: a(href='/signup').btn ساخت حساب جدید
    block content

    != js('application')

    - if (process.env.NODE_ENV === "production")
      include _analytics